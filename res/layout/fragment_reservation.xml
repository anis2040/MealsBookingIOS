<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.ReservationFragment"
    >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/tool_bar"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp">

                    <!--viewpager used-->


                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="22dp"
                        />


                    <!--circleindicator used-->

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_below="@+id/view"
                        android:layout_gravity="bottom"
                        app:ci_drawable="@drawable/ic_circle"
                        app:ci_drawable_unselected="@drawable/ic_circle"
                        app:ci_height="7dp"
                        app:ci_width="7dp" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="185dp"

                        >


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="30dp">



                            <TextView
                                android:id="@+id/tvNameRestoBG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingRight="5dp"
                                android:text="AWSOME VILLA"
                                android:background="@drawable/round"
                                android:textSize="18dp"
                                android:textColor="#fff"
                                android:layout_marginLeft="16dp"
                                />

                            <TextView
                                android:id="@+id/tvPositionRestoBG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Delhi"
                                android:background="@drawable/round"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:paddingRight="5dp"
                                android:textColor="#fff"
                                android:layout_marginLeft="16dp"
                                />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/rect1"
                            android:elevation="7dp"
                            android:padding="10dp"
                            android:text="4.5"
                            android:textColor="#fff"
                            android:textSize="35dp" />





                    </LinearLayout>



                </FrameLayout>


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_above="@+id/pay"
                    android:background="@color/White">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNameReso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Lahnaya"
                            android:textColor="@color/text"
                            android:textSize="35dp" />

                        <com.example.anis.booksmeals.customfonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@drawable/trait"
                            android:backgroundTint="@color/colorPrimaryDark"

                            />



                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Security Deposit 500 Rs"
                            android:textColor="#8d8d8d" />

                        <RatingBar
                            android:id="@+id/RatingBarById"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:numStars="5"
                            android:progressTint="#f05421"

                            android:rating="5"
                            android:scaleX="2"
                            android:scaleY="2" />


                        <TextView
                            android:id="@+id/Reviews_Id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:text="238 reviews"
                            android:textColor="#9b9b9b"
                            android:textSize="15dp"
                           />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#f5f5f5"
                        android:padding="6dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="DESCRIPTIONS"
                        android:textColor="#ef4e33"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/description_detail"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit,
 sed do eiusmod tempor incididunt ut labore et dolore
"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"

                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OPEN IN"
                                android:textColor="#ef4e33"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="10:00 - 23:00"
                                android:textColor="#4a4a4a"
                                android:textSize="20dp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/food5_contact__ract_edit"
                            android:gravity="center"
                            android:paddingLeft="12dp"
                            android:paddingTop="8dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="8dp"
                            >

                            <ImageButton
                                android:id="@+id/tel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:padding="1dp"
                                android:src="@drawable/reservation" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:padding="1dp"
                                android:text="Reservation"
                                android:textColor="#4a4a4a"
                                android:textSize="14.4sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#f5f5f5"
                        android:padding="6dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/phone1"
                            android:layout_gravity="center"
                            android:tint="@color/colorBitterSweetDark"

                            />




                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:layout_weight="1"
                            android:id="@+id/tvTel"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Family Only"
                            android:textColorHint="#181737"
                            android:textColor="@color/text"
                            android:background="#0000"
                            android:paddingLeft="20dp"
                            android:paddingTop="25dp"
                            android:gravity="left"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/location"
                            android:layout_gravity="center"
                            android:tint="@color/colorBitterSweetDark"

                            />

                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:layout_weight="1"
                            android:id="@+id/tvPosition"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 Bathroom"
                            android:textColor="@color/text"
                            android:background="#0000"
                            android:paddingLeft="20dp"
                            android:paddingTop="25dp"
                            android:gravity="left"
                            />




                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="70dp"


                            android:src="@drawable/circle_cash"
                            android:tint="@color/colorBitterSweetDark"

                            />
                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="From: "
                            android:textColor="@color/text"
                            android:paddingTop="25dp"
                            android:paddingLeft="20dp"
                            android:background="#0000"
                            android:gravity="left"
                            />

                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:id="@+id/from"
                            android:layout_weight="1"
                            android:paddingTop="25dp"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 Bathroom"
                            android:textColor="@color/text"
                            android:background="#0000"


                            android:gravity="left"
                            />

                        <com.example.anis.booksmeals.customfonts.MavenPro_regular

                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:paddingTop="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To:"
                            android:textColor="@color/text"
                            android:background="#0000"

                            android:gravity="left"
                            />


                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:id="@+id/to"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 Bathroom"
                            android:textColor="@color/text"
                            android:background="#0000"
                            android:paddingTop="25dp"
                            android:gravity="left"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/type"
                            android:layout_gravity="center"
                            android:tint="@color/colorBitterSweetDark"


                            />



                        <com.example.anis.booksmeals.customfonts.MavenPro_regular
                            android:layout_weight="1"
                            android:id="@+id/tvCategory"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 Bathroom"
                            android:textColor="@color/text"
                            android:background="#0000"
                            android:paddingLeft="20dp"
                            android:paddingTop="25dp"
                            android:gravity="left"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/devider"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"/>

                    </LinearLayout>


                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#f5f5f5"
                    android:padding="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="13.4dp"
                    android:paddingTop="16dp"
                    android:background="@color/White">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MENU"
                        android:textColor="#c2c4ca"
                        android:textSize="14.4sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="See all the menu"
                        android:textColor="#d22532"
                        android:textSize="14.4sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13.4dp">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/RecyclerView2_Food5_Detail_Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View more"
                    android:layout_marginTop="12dp"
                    android:textColor="#c2c4ca"
                    android:textSize="14.4sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#f5f5f5"
                    android:padding="6dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="13.4dp"
                    android:paddingTop="25dp"
                    android:background="@color/White">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="REVIEWS"
                        android:textColor="#c2c4ca"
                        android:textSize="14.4sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="See all reviews"
                        android:textColor="#d22532"
                        android:textSize="14.4sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  >


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewReviw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="30dp"
                    android:background="#ffffff"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="30dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/White"
                            android:orientation="horizontal"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp">

                            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgUser"
                                android:layout_width="38.4dp"
                                android:layout_height="38.4dp"
                                android:layout_marginLeft="13.4dp"
                                android:layout_marginTop="17dp"
                                android:layout_marginRight="5.4dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/avatar"
                                app:riv_corner_radius="30dip"
                                app:riv_oval="true" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15.4dp"
                                android:layout_marginTop="12.8dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/nameUserReview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Ellen McLaughlin"
                                        android:textColor="#4a4a4a"
                                        android:textSize="20sp" />

                                    <RatingBar
                                        android:id="@+id/ratingReview"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="18.2dp"
                                        android:isIndicator="false"
                                        android:numStars="5"
                                        android:progressTint="#f05421"
                                        android:rating="5" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                        <EditText
                            android:id="@+id/reviewEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13.4dp"
                            android:layout_marginRight="13.4dp"
                            android:background="@drawable/rect_white"
                            android:backgroundTint="@color/colorBackroundWhite"
                            android:gravity="center"
                            android:hint="Write a review..."
                            android:inputType="textMultiLine"
                            android:lines="8"
                            android:maxLines="8"
                            android:minLines="3"
                            android:scrollbars="vertical"
                            android:textColor="#000000"
                            />

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rect1"
                            android:text="Submit"
                            android:textColor="@color/White" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

</RelativeLayout>