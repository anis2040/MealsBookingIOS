<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">




        <ImageView
            android:id="@+id/imagee"
            android:layout_width="207.3dp"
            android:layout_height="140dp"
            android:src="@drawable/food1"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_copy5"
                android:tint="#d22532"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingLeft="@dimen/album_title_padding"
                android:layout_marginTop="13dp"
                android:paddingRight="@dimen/album_title_padding"
                android:textColor="#373737"
                android:textSize="16.7sp"
                android:text="Chakala"
                android:textStyle="bold"/>

        </LinearLayout>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/place"
                android:tint="#d22532"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp"
                android:text="473 Keeling Station"
                android:textColor="#111"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cash"
                android:tint="#d22532"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="From:"

                android:textColor="#111"
                android:textSize="12.7sp" />

            <TextView
                android:id="@+id/minPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="13"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="12.7sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="DT"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="12.7sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="To:"
                android:textSize="12.7sp"
                android:layout_marginTop="10dp"
                android:textColor="#111"/>

            <TextView
                android:id="@+id/maxPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="12.7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="DT"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="12.7sp" />


        </LinearLayout>




        <!--<TextView-->
            <!--android:id="@+id/tv_price"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Rs 500 / person (app.)"-->
            <!--android:textSize="12.7sp"-->
            <!--android:layout_marginTop="5.7dp"-->
            <!--android:textColor="#a5a5a5"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.3dp"
            android:layout_gravity="right"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="235 Review"
                android:textSize="9.7sp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="#a5a5a5"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                android:isIndicator="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_marginLeft="10dp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginRight="@dimen/pdlg_space_1.0x"/>



        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>