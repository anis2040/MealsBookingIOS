<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <FrameLayout
        android:id="@+id/bgbg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/add_resto"
        android:scaleType="centerCrop"></FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/bgbg"
        android:background="@drawable/bg"
        android:backgroundTint="@color/colorPrimaryDark"
        />



    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/logo_img"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avatar"
        android:layout_marginLeft="5dp"
        app:view_shadowRadius="2dp"
        app:view_shadowDx="2dp"
        app:view_shadowDy="0dp"
        app:view_borderWidth="2dp"
        app:view_borderColor="#cccccc"
        android:onClick="selectImage"

        />


    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="400dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/ic_camera"/>





    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >


        <com.example.anis.booksmeals.customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADD YOUR NEW RESTAURANT"
            android:textColor="#fff"
            android:textSize="40dp"


            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_img"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:hint="name">

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/store"
                android:drawableLeft="@drawable/store"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp"


                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="282dp"
            android:layout_height="2dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:hint="Position">

            <android.support.v7.widget.AppCompatEditText

                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/maps_and_flags"
                android:drawableLeft="@drawable/maps_and_flags"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp"


                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="282dp"
            android:layout_height="2dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:hint="Category">

            <android.support.v7.widget.AppCompatEditText

                android:layout_width="291dp"
                android:layout_height="wrap_content"

                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/list"
                android:drawableLeft="@drawable/list"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp"


                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="285dp"
            android:layout_height="2dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/maxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:hint="Max Price">

            <android.support.v7.widget.AppCompatEditText

                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/dollar"
                android:drawableLeft="@drawable/dollar"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp"


                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="285dp"
            android:layout_height="2dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/minPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linear"
            android:hint="Min Price">

            <android.support.v7.widget.AppCompatEditText

                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/dollar"
                android:drawableLeft="@drawable/dollar"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorhint"
                android:textSize="16dp"


                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="285dp"
            android:layout_height="2dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextLabel"
            android:hint="Descrition"



            >



            <android.support.v7.widget.AppCompatEditText
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:background="@drawable/rect_gray"
                android:drawableStart="@drawable/info"
                android:drawableLeft="@drawable/info"
                android:drawablePadding="12dp"
                android:padding="20dp"
                android:textColor="@color/colortext"
                android:textColorHint="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                app:passwordToggleTint="@color/colorAccent"
                android:inputType="textMultiLine"


                />
        </android.support.design.widget.TextInputLayout>


        <View
            android:layout_width="285dp"
            android:layout_height="2dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimaryDark" />


        <com.example.anis.booksmeals.customfonts.MyTextView
            android:id="@+id/signinBtn"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/rect_green"

            android:gravity="center"
            android:padding="9dp"
            android:text="Add"
            android:textColor="#fff"
            android:textSize="16dp"

            />

    </LinearLayout>







    <LinearLayout
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/or"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="145dp"
        >






    </LinearLayout>


    <View

        android:layout_width="60dp"
        android:layout_height="257dp"
        android:layout_alignBottom="@+id/acc"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"

        android:layout_marginBottom="0dp"
        android:background="@drawable/spoon1" />


    <View

        android:layout_width="51dp"
        android:layout_height="280dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:background="@drawable/fork" />








</RelativeLayout>
