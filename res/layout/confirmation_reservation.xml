<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289.9dp"
    android:layout_height="435.8dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:src="@drawable/marroc"
        android:layout_width="165.1dp"
        android:layout_height="165.1dp"
        android:layout_marginTop="46.1dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"/>

    <com.example.anis.booksmeals.customfonts.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you !"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="21.2dp"/>
    <com.example.anis.booksmeals.customfonts.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order is successfully."
        android:textColor="#111111"
        android:layout_gravity="center"
        android:textSize="12.5sp"
        android:layout_marginTop="11.5sp"/>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="120dp"
        android:layout_height="48.3dp"
        android:text="OK"
        android:paddingHorizontal="50dp"
        android:paddingTop="10dp"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="45.1dp"
        android:background="@drawable/btnrectangle"/>



</LinearLayout>