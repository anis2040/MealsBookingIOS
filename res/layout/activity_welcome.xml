<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvity.WelcomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/si"
        >
    </FrameLayout>


    <com.example.anis.booksmeals.customfonts.MyTextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="Meals"
        android:textColor="#fff"
        android:textSize="40dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="10dp"
        />

    <com.example.anis.booksmeals.customfonts.MyTextView
        android:id="@+id/head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="Booking"
        android:textColor="#fff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"
        />




    <ImageView
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo_signin"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        />



    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        >

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/trait"
            android:backgroundTint="@color/colorPrimaryDark"

            />


        <com.example.anis.booksmeals.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Get connected with"
            android:lines="1"
            android:textSize="28dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"


            />
        <com.example.anis.booksmeals.customfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="21dp"
            android:text="The best creative Restaurants"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28dp"
            android:textStyle="bold"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"

            >


            <com.example.anis.booksmeals.customfonts.MyTextView
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/signin"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signin"
                android:textColor="#fff"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"
                android:gravity="center"
                />


            <com.example.anis.booksmeals.customfonts.MyTextView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/Signup"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <View

        android:layout_width="112dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/acc"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="150dp"
        android:background="@drawable/fork_sspoon" />


</RelativeLayout>



